<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%- include('partials/_globalHeaders.ejs') %>
        <title>SIGNUP</title>
    </head>
    <body>
        <%- include('partials/_navbar.ejs') %>

        <main>
        
            <section class="select_accessory_type">
                <h1 class="title title--center">PRODUCTOS EN VENTA: </h1>
    
                <div class="cards_container cards_container--center-items">

                    <% for(var i = 0; i < products[0].length; i++) { %>
                    
                        <article class="accessory-basic-card">
                            <div class="accessory-basic-card__image">
                                <img src="/images/<%=products[0][i].ruta_imagen%>" alt="<%=products[0][i].nombre %>">
                            </div>
                            <div class="accessory-basic-card__body">
                                <h2 class="card__title"><%=products[0][i].nombre %></h2>
                                <p class="price"><span>Precio: </span><%=products[0][0].precio_final %></p>
    
                                <div class="accessory-basic-card__btns">
                                    <a href="#" class="btn btn--primary btn--card btn--center">AÃ‘ADIR AL CARRITO</a>
                                    <a href="#" class="btn btn--secondary btn--card btn--center">VER DETALLES</a>
                                </div>
                            </div>
                        </article>
                    
                    <% } %>
    
                </div>
    
            </section>

        </main>

        <%- include('partials/_globalScripts.ejs') %>

    </body>
</html>
